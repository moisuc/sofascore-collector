# Browser
HEADLESS=true

# Database
# SQLite (default - no additional setup required):
DATABASE_URL=sqlite:///data/sofascore.db

# PostgreSQL (requires psycopg2 or psycopg2-binary):
# DATABASE_URL=postgresql://user:password@localhost:5432/sofascore_db
# Or with explicit driver:
# DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/sofascore_db

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO

# Sports to track
SPORTS=["football","tennis","basketball","handball","volleyball"]

# Rate limiting
NAVIGATION_DELAY_MIN=2
NAVIGATION_DELAY_MAX=5
PAGE_REFRESH_INTERVAL=300
BACKFILL_DELAY=10

# Memory Monitoring & Recovery
MEMORY_CHECK_INTERVAL=30.0          # Check memory usage every N seconds
MEMORY_LIMIT_MB=4096                # Memory threshold in MB (triggers recovery at 90%)
MEMORY_TARGET_PERCENT=0.5           # Target memory usage after recovery (50%)
CHROME_CLEANUP_INTERVAL=3600        # Chrome cache cleanup interval in seconds (1 hour)
MEMORY_METRICS_FILE=data/memory_metrics.json  # JSON file path for memory metrics
